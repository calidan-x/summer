{
  "compilerOptions": {
    "target": "ES2020",
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "moduleResolution": "Node",
    "module": "commonjs",
    "declaration": true
  },
  "exclude": ["**/*.d.ts"]
}
